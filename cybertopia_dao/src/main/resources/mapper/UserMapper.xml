<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.macteam.cybertopia.dao.IUserDao" >
    <update id="updateUser" parameterType="User"></update>
    <delete id="deleteUserById" parameterType="int"></delete>
    <delete id="deleteUserByuserName" parameterType="String"></delete>

    <select id="getUserByUsername" parameterType="string" resultType="com.macteam.cybertopia.entity.User">
        select * from user where username=#{username}
    </select>
    <select id="getUserById" resultType="com.macteam.cybertopia.entity.User"></select>

</mapper>